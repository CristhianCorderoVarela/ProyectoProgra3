<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="root" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cr.ac.una.restunaclient.controller.ReportesController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="16"
              style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 16px 24px;">
            <HBox alignment="CENTER_LEFT" spacing="16" HBox.hgrow="ALWAYS">
                <StackPane style="-fx-background-color: linear-gradient(to bottom right, #FF7A00, #FF6B00);
                                  -fx-background-radius: 8px; -fx-pref-width: 48px; -fx-pref-height: 48px;">
                    <Label style="-fx-font-size: 24px;" text="🍽" />
                </StackPane>
                <VBox spacing="2">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="RestUNA" />
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #999999;" text="Sistema de Facturación" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="16">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="lblUsuario"
                           style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                    <Label fx:id="lblRol"
                           style="-fx-font-size: 11px; -fx-text-fill: #999999;" />
                </VBox>
                <Button fx:id="btnVolver" onAction="#handleVolver"
                        style="-fx-background-color: #F5F5F5; -fx-text-fill: #333333;
                               -fx-background-radius: 8px; -fx-padding: 8px 16px; -fx-cursor: hand;" />
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="24" style="-fx-padding: 32px 24px; -fx-background-color: #F9FAFB;">
            <!-- Título -->
            <VBox spacing="4">
                <Label fx:id="lblModuloTitulo"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                <Label fx:id="lblModuloSubtitulo"
                       style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            </VBox>

            <HBox spacing="24" VBox.vgrow="ALWAYS">
                <!-- Menú lateral -->
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <VBox spacing="12" style="-fx-pref-width: 380px;">
                        <Label fx:id="lblTipoReporte"
                               style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #666666;
                                      -fx-padding: 0 0 8 0;" />

                        <!-- Facturas -->
                        <Button fx:id="btnFacturas" maxWidth="Infinity" onAction="#selectFacturas"
                                style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                                       -fx-border-width: 2px; -fx-border-radius: 8px;
                                       -fx-background-radius: 8px; -fx-padding: 16px;
                                       -fx-cursor: hand; -fx-alignment: CENTER_LEFT;">
                            <graphic>
                                <HBox alignment="CENTER_LEFT" spacing="12">
                                    <StackPane style="-fx-background-color: #275BF5;
                                                      -fx-background-radius: 8px;
                                                      -fx-pref-width: 44px; -fx-pref-height: 44px;">
                                        <Label style="-fx-font-size: 22px;" text="📄" />
                                    </StackPane>
                                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                                        <Label fx:id="lblCardFacturasTitulo"
                                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                        <Label fx:id="lblCardFacturasSub"
                                               style="-fx-font-size: 11px; -fx-text-fill: #999999;" />
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>

                        <!-- Productos -->
                        <Button fx:id="btnProductos" maxWidth="Infinity" onAction="#selectProductos"
                                style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                                       -fx-border-width: 2px; -fx-border-radius: 8px;
                                       -fx-background-radius: 8px; -fx-padding: 16px;
                                       -fx-cursor: hand; -fx-alignment: CENTER_LEFT;">
                            <graphic>
                                <HBox alignment="CENTER_LEFT" spacing="12">
                                    <StackPane style="-fx-background-color: #ff7a00;
                                                      -fx-background-radius: 8px;
                                                      -fx-pref-width: 40px; -fx-pref-height: 40px;">
                                        <Label style="-fx-font-size: 18px;" text="📊" />
                                    </StackPane>
                                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                                        <Label fx:id="lblCardProductosTitulo"
                                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                        <Label fx:id="lblCardProductosSub"
                                               style="-fx-font-size: 11px; -fx-text-fill: #999999;" />
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>

                        <!-- Cierres -->
                        <Button fx:id="btnCierres" maxWidth="Infinity" onAction="#selectCierres"
                                style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                                       -fx-border-width: 2px; -fx-border-radius: 8px;
                                       -fx-background-radius: 8px; -fx-padding: 16px;
                                       -fx-cursor: hand; -fx-alignment: CENTER_LEFT;">
                            <graphic>
                                <HBox alignment="CENTER_LEFT" spacing="12">
                                    <StackPane style="-fx-background-color: #22cc5c;
                                                      -fx-background-radius: 8px;
                                                      -fx-pref-width: 40px; -fx-pref-height: 40px;">
                                        <Label style="-fx-font-size: 18px;" text="💰" />
                                    </StackPane>
                                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                                        <Label fx:id="lblCardCierresTitulo"
                                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                        <Label fx:id="lblCardCierresSub"
                                               style="-fx-font-size: 11px; -fx-text-fill: #999999;" />
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>
                    </VBox>
                </ScrollPane>

                <!-- Contenido -->
                <StackPane style="-fx-background-color: white; -fx-border-color: #E0E0E0;
                                  -fx-border-radius: 8px; -fx-background-radius: 8px;
                                  -fx-padding: 24px; -fx-min-height: 400px;" HBox.hgrow="ALWAYS">

                    <!-- Placeholder -->
                    <VBox fx:id="placeholder" alignment="CENTER" spacing="16" StackPane.alignment="CENTER">
                        <Label style="-fx-font-size: 64px;" text="📈" />
                        <Label fx:id="lblPlaceholderTitulo"
                               style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                        <Label fx:id="lblPlaceholderSub"
                               style="-fx-font-size: 13px; -fx-text-fill: #999999;" />
                    </VBox>

                    <!-- Form: Facturas -->
                    <VBox fx:id="formFacturas" managed="false" spacing="16" visible="false">
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label style="-fx-font-size: 18px;" text="📄" />
                            <Label fx:id="lblFacturasTitulo"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                        </HBox>
                        <GridPane hgap="16" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label fx:id="lblFacturasFechaIni"
                                       style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                <DatePicker fx:id="facturasDateInicio" maxWidth="Infinity" />
                            </VBox>
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label fx:id="lblFacturasFechaFin"
                                       style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                <DatePicker fx:id="facturasDateFin" maxWidth="Infinity" />
                            </VBox>
                            <rowConstraints><RowConstraints /></rowConstraints>
                        </GridPane>
                        <VBox spacing="8">
                            <Label fx:id="lblFacturasEstado"
                                   style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                            <ComboBox fx:id="facturasComboEstado" maxWidth="Infinity" />
                        </VBox>
                        <HBox spacing="12">
                            <Button fx:id="btnVerificarFacturas" maxWidth="Infinity"
                                    onAction="#handleGenerarFacturas"
                                    style="-fx-background-color: #3B82F6; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 8px 12px;
                                           -fx-cursor: hand; -fx-font-weight: 600; -fx-font-size: 12px;"
                                    HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnPdfFacturas" onAction="#handlePDFFacturas"
                                    style="-fx-background-color: #DC2626; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 14px 22px;
                                           -fx-cursor: hand; -fx-font-weight: 700; -fx-font-size: 14px;" />
                        </HBox>
                    </VBox>

                    <!-- Form: Productos -->
                    <VBox fx:id="formProductos" managed="false" spacing="16" visible="false">
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label style="-fx-font-size: 18px;" text="📊" />
                            <Label fx:id="lblProductosTitulo"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                        </HBox>
                        <GridPane hgap="16" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label fx:id="lblProductosFechaIni"
                                       style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                <DatePicker fx:id="productosDateInicio" maxWidth="Infinity" />
                            </VBox>
                            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label fx:id="lblProductosFechaFin"
                                       style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                                <DatePicker fx:id="productosDateFin" maxWidth="Infinity" />
                            </VBox>
                            <rowConstraints><RowConstraints /></rowConstraints>
                        </GridPane>
                        <VBox spacing="8">
                            <Label fx:id="lblProductosCantidad"
                                   style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                            <ComboBox fx:id="productosComboTop" maxWidth="Infinity" />
                        </VBox>
                        <HBox spacing="12">
                            <Button fx:id="btnVerificarProductos" maxWidth="Infinity"
                                    onAction="#handleGenerarProductos"
                                    style="-fx-background-color: #FF7A00; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 8px 12px;
                                           -fx-cursor: hand; -fx-font-weight: 600; -fx-font-size: 12px;"
                                    HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnPdfProductos" onAction="#handlePDFProductos"
                                    style="-fx-background-color: #DC2626; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 14px 22px;
                                           -fx-cursor: hand; -fx-font-weight: 700; -fx-font-size: 14px;" />
                        </HBox>
                    </VBox>

                    <!-- Form: Cierres -->
                    <VBox fx:id="formCierres" managed="false" spacing="16" visible="false">
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label style="-fx-font-size: 18px;" text="💰" />
                            <Label fx:id="lblCierresTitulo"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                        </HBox>
                        <HBox spacing="8"
                              style="-fx-background-color: #F0FDF4; -fx-border-color: #BBF7D0;
                                     -fx-border-width: 1px; -fx-border-radius: 8px;
                                     -fx-background-radius: 8px; -fx-padding: 12px;">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: #22C55E;" text="ℹ" />
                            <Label fx:id="lblCierresBanner"
                                   style="-fx-font-size: 12px; -fx-text-fill: #166534;" wrapText="true" />
                        </HBox>
                        <VBox spacing="8">
                            <Label fx:id="lblCierresCajero"
                                   style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                            <ComboBox fx:id="cierresComboCajero" maxWidth="Infinity" />
                        </VBox>
                        <VBox spacing="8">
                            <Label fx:id="lblCierresFecha"
                                   style="-fx-font-size: 12px; -fx-font-weight: 600; -fx-text-fill: #333333;" />
                            <DatePicker fx:id="cierresDateFecha" maxWidth="Infinity" />
                        </VBox>
                        <HBox spacing="12">
                            <Button fx:id="btnVerificarCierres" maxWidth="Infinity"
                                    onAction="#handleGenerarCierres"
                                    style="-fx-background-color: #22C55E; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 8px 12px;
                                           -fx-cursor: hand; -fx-font-weight: 600; -fx-font-size: 12px;"
                                    HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnPdfCierres" onAction="#handlePDFCierres"
                                    style="-fx-background-color: #DC2626; -fx-text-fill: white;
                                           -fx-background-radius: 8px; -fx-padding: 14px 22px;
                                           -fx-cursor: hand; -fx-font-weight: 700; -fx-font-size: 14px;" />
                        </HBox>
                    </VBox>

                </StackPane>
            </HBox>
        </VBox>
    </center>
</BorderPane>